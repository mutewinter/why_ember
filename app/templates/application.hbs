<div class="container">
  {{outlet}}
  <footer class="app-footer">
    <ul>
      <li>
        {{#if App.currentSlide}}
        <a {{action goToSlide App.firstSlide href=true}}>Back to the Start</a>
        {{else}}
          &nbsp;
        {{/if}}
      </li>
      <li>
        Created by <a href="http://twitter.com/mutewinter">Jeremy Mack</a>
      </li>
      <li>
        {{#if App.currentSlide}}
          {{App.currentSlidePosition}} / {{App.slides.length}}
        {{else}}
          &nbsp;
        {{/if}}
      </li>
    </ul>
  </footer>
</div>
