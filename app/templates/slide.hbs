<ul class="slide-controls">
  <li {{action showSlide App.previousSlide}}>
    {{#if App.previousSlide}}
    <a {{action showSlide App.previousSlide href=true}}>
      &lt; {{App.previousSlide.name}}
    </a>
    {{else}}
      &nbsp;
    {{/if}}
  </li>
  <li>
    <div class="slide-controls-home">
      <a href="#" >Home</a>
    </div>
  </li>
  <li {{action showSlide App.nextSlide}}>
    {{#if App.nextSlide}}
    <a {{action showSlide App.nextSlide href=true}}>
      {{App.nextSlide.name}} &gt;
    </a>
    {{else}}
      &nbsp;
    {{/if}}
  </li>
</ul>
<div class="slide-background">
  <div class="slide-container">
    {{view App.SlideContentView contentBinding="content"}}
  </div>
</div>
