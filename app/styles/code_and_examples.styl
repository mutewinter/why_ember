// Styles for code and examples displayed in slides.
@import 'nib'

// Variables
orangina = #f24730
code-width = 600px

/*
  Code Mirror
  Styles for the Code Mirror regions.
*/
.CodeMirror
  width code-width
  background-color rgba(#fdfdfd, 0.5)
  border-radius 5px 5px 0 0
  padding 2px 4px

  border-top 1px solid #ccc
  border-right 1px solid #ccc
  border-left 1px solid #ccc

.no-buttons .CodeMirror
  border-radius 5px

.CodeMirror-scroll
  height auto

.CodeMirror-focused
  box-shadow 0 0 4px 2px rgba(orangina, 0.8)

.CodeMirror-gutter
  background-color rgba(white, 0.5)
  border-right 1px solid #ccc

/*
  Code Toolbar
  The toolbar below a Code Mirror view. Contains buttons and output relevant to
  the code view.
*/
.code-toolbar
  text-color = #888
  // 10px is due to CodeMirror adjusting width after the element is created.
  width code-width + 8px
  font-size 0.8em
  clearfix()
  background-color rgba(#fdfdfd, 0.5)
  border 1px solid #ccc
  border-radius 0 0 5px 5px

  .messages
    padding-left 5px
    color text-color
    width 400px
    float left

    &.error
      background-color rgba(red, 0.3)
      color darken(red, 30%)

  .buttons
    float right
    border-left 1px solid #ccc
    padding 0 5px
    a
      color text-color
      border none
      &:hover
        border-bottom 1px solid text-color
      line-height 0.9em
