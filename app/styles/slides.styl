@import 'nib'

slide-background-color = rgba(250,206,162,0.5)

/*
  Slides
  The overview of slides shown on the homepage.
*/

ul.slide-list
  list-style none

  width 80%
  margin 0 auto

  clearfix()

  > li
    float left
    padding 0
    margin 0
    width 250px
    height 200px

/*
  Slide
  The entire slide page, including its controls.
*/

.slide-container
  height 500px

/*
  Slide Container
  The container that holds a single slide.
*/
.slide-background
  // From http://subtlepatterns.com/medic-packaging-foil/
  background-image url('/img/foil.png')

code
  background-color rgba(253,253,253,0.5)
  border-radius 5px
  padding 2px 4px
  border 1px solid #ccc

  &.block
    display inline-block
    white-space pre

/*
  Slide Content
  The inner portion of the slide containing all of the content.

  .preview - The smaller version of the slide with certain details toned
             down for the homepage.
*/

.slide-content-container
  background-color slide-background-color
  margin 3px 4px 8px 4px
  border-radius 0 0 5px 5px
  box-shadow 0 0 0px 1px rgba(0,0,0,0.3),
             0 0 0px 5px white,
             0 5px 4px black

.slide
  width 768px
  margin auto

  // Small enough to be the entire browser unless...
  @media screen and (max-width: 768px)
    width 100%

  // We get too small, then we go back to having a width.
  @media screen and (max-width: 300px)
    width 500px

  h1
    width 100%
    background-color rgba(255,255,255,0.4)
    padding 10px 0
    border-bottom: 1px solid rgba(0,0,0,0.2)

  ul
    list-style-type none

    &.check-em
      li:after
        content 'âœ“'
        margin-left 20px

    // Custom Bullets
    li:before
      content ">"
      color #999
      margin-right 20px

    li
      font-size 28px
      font-size 1.8em
      margin 18px 0
      &.small
        font-size 1.0em

  .subtle
    font-size 0.8em
    a
      color #999
      border-color #999

  footer
    padding 5px 10px

  &.preview
    fake-width = 800px
    fake-height = 500px
    // The psuedo height and width so the slides render their content
    width fake-width
    height fake-height

    transform scale(0.3) translate((-1 * fake-width), (-1 * fake-height))
    overflow hidden

    box-shadow 0 0 5px 5px black

    &.flash
      animation flash 1.0s ease-in

    &:hover
      cursor pointer


@keyframes flash
  0%
    box-shadow 0 0 5px 10px yellow
  100%
    box-shadow 0 0 5px 5px black

/*
  Slide-Specific Styles
  Styles that apply to only a single slide.
*/


/*
  Slide Controls
  The controls that appear above all single slides.
*/
.slide-controls
  background-color rgba(255,255,255,0.5)

  padding 10px 0
  margin 0
  width 100%
  clearfix()

  list-style none

  opacity 0.5
  transition opacity 0.3s ease-out

  &:hover
    opacity 1

  li
    float left
    width 20%
    text-align center
    &:first-child
      text-align left
      width 40%
    &:last-child
      text-align right
      width 40%

  a
    margin 0 10px

